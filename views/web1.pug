extends layout

block content

    div(class="jumbotron")
        h1='一个很像TTCTF的登录窗口'
        script
            include ../public/javascripts/showlogin.js
        div(id='login', class="container")
            form(action="/web1" method = 'POST' id = 'loginbox')
                label(for ='loginname') 用户名：
                input(type='text', name='uname', autocomplete= 'on',
                      id = 'loginname', class="input", aria-describedby="basic-addon1",
                      )
                br
                label(for ='loginpwd') 密码：
                input(id = 'loginpwd', type='password', name='upass', class ='input'
                      )

                br
                input(class="btn btn-primary btn-lg", type='submit', value='登录', style="width:100px;height:50px", role="button")

                
