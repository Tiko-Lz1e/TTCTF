extends layout

block content
    script
        include ../public/javascripts/showchallenge.js


    -var num=qesid;

    div(class="jumbotron" )
        -for(var i=1; 3*i<=num+2; i++)
            div(class="card-deck-wrapper")
                div(class="card-deck")
                    -for(var j=3*i-2; j<=num && j<=3*i; j++)
                        div(class="card text-center" id='question'+j)
                            //-console.log('j', j)
                            div(class="card-header") 第#{j}题
                            div(class="card-body" )
                                h4(class='card-text') _(:з」∠)_
                                br
                                button(type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal" data-whatever=j) 查看

            br


    div(class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true")
        div(class="modal-dialog" role="document")
            div(class="modal-content" )
                div(class="modal-header")
                    h5(class="modal-title" id="exampleModalLabel") the question's name
                    button(type="button" class="close" data-dismiss="modal" aria-label="Close") <span aria-hidden="true">&times;</span>
                div(class="modal-body")
                    p(id="message")
                    a(class="btn btn-link" href="" role="button" id="qeslink") 题目链接
                    p(id="qespoint")
                    form
                        div(class="form-group")
                            input(id="flagid" type="hidden" value="0")
                            | flag:
                            input(class="form-control" type="text" id="flagtext")
                        div(id="answer")
                div(class="modal-footer")
                    botton(class="btn btn-secondary"  data-dismiss="modal") Close
                    botton(class="btn btn-primary" onclick="sendflag()") Send flag










